    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="173"/>

    <depends optional="true">com.intellij.database</depends>
    <depends optional="true">com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="cc.ssnoodles.plugin.services.PersistentStateService" serviceImplementation="cc.ssnoodles.plugin.services.PersistentStateService"/>
    </extensions>

    <actions>
        <action id="db2j" class="cc.ssnoodles.plugin.MainAction" text="Db2j" description="Generating java files from database tables.">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>